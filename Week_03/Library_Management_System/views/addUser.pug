extends baseTemplate 
block main 
    section.dashboard--section
        include partials/sidebar
        div.content
            header
                h1 Add a New User
            section.form-section
                form(action="/add-user" method="POST" class="user-form")
                div.form-group
                    label(for="username") Username
                    input#username(type="text" name="username" required placeholder="Enter username")
                div.form-group
                    label(for="email") Email
                    input#email(type="email" name="email" required placeholder="Enter email")
                div.form-group
                    label(for="phone") Phone
                    input#phone(type="text" name="phone" required placeholder="Enter phone number")
                div.form-group
                    label(for="role") Role
                    select#role(name="role" required)
                        option(value="" disabled selected) Select role
                        option(value="user") user
                        option(value="admin") admin
                div.form-group
                    label(for="password") Password
                    input#password(type="password" name="password" required placeholder="Enter password")
                div.form-group
                    label(for="confirmPassword") Confirm Password
                    input#confirmPassword(type="password" name="confirmPassword" required placeholder="Re-enter password")
                div.form-actions
                    button(type="submit" class="btn-submit user--submit") Submit