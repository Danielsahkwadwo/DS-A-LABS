meta(charset='UTF-8')
meta(name='viewport' content='width=device-width,initial-scale=1')
title #{title}
style.
  
  *,
      *::after,
      *::before {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }
      .home--text {
        background-color: rgb(221, 90, 90);
        color: white;
        padding: 1.4rem;
        margin-bottom: 5rem;
      }
  
      h2 {
        text-align: center;
        font-weight: bold;
        text-transform: capitalize;
      }
      form {
        text-align: center;
      }
      fieldset {
        padding: 5rem 2rem;
        width: 50%;
        margin: 0 auto;
      }
      input {
        width: 100%;
        padding: 10px;
      }
      button {
        width: 100%;
        padding: 10px;
        margin-top: 1rem;
        border: none;
        background-color: rgb(221, 90, 90);
        color: white;
        font-weight: 600;
        cursor: pointer;
      }
      legend {
        padding: 0 10px;
      }
      table{
        border: 1px solid gray;
        margin: 0 auto;
        text-align: left;
        margin-bottom: 3rem;
      }
      table thead tr{
        background-color:dodgerblue;
        color:white;
      }
      table th, table td{
        padding: .3rem 1rem;
      }
  
header
main
  div
    .home--text
      h2 Welcome To The URL Shortener
    form(method='post' action='/shorten')
      fieldset
        legend Provide URL
        input.url(type='text' name='url' placeholder='Enter your url')
        button(type='submit') Submit
      table(style='margin-top: 2rem')
        thead
          tr
            th Shortened URL 
            th Original URL
        tbody 
          each [key, value] of Array.from(data)
            tr
              td
                a(href=`/${key}`)=`http://${key}`
              td
                a(href=`${value}`)=value 
            //- a(href='#') url