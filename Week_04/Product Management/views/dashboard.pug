extends baseTemplate 
block main
    main
        div.dashboard.flex
            include partials/sidebar
            div.dashboard--content.w-full
                div.shadow-md.w-full.py-4.px-5.text-center.font-semibold
                    h1.text-lg User Information
                div.p-10
                    label.block(for) Username
                    input(class="w-[60%] border-[1.5px] border-slate-500 px-5 py-2 rounded-md mb-5")(type='text' value=user.username name readonly)
                    label.block(for) User Email
                    input(class="w-[60%] border-[1.5px] border-slate-500 px-5 py-2 rounded-md mb-5")(type='text' value=user.email name readonly)
