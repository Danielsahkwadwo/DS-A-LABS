extends baseTemplate 
block main 
    main
        div(class="row flex flex-col items-center justify-center h-[70vh]")
            div(class="main--container border-2 border-slate-600 p-16 py-8 w-3/6 rounded-md")
                h3.font-semibold.text-center.text-3xl.text-slate-600 Login
                form.mt-5(action="/users/login" method="post")
                    input(class="w-full border-[1.5px] border-slate-500 px-5 py-2 rounded-md mb-5")#email(type='email' name='email' placeholder='Enter Email')
                    input(class="w-full border-[1.5px] border-slate-500 px-5 py-2 rounded-md mb-5")#password(type='password' name='password' placeholder='Enter Password')
                    input.w-full.bg-slate-600.border-none.text-white.px-5.py-2.rounded-md(type='submit' value='Login')
                    p.mt-3 Don't have account? 
                        a.text-blue-700.font-semibold(href="/register")  register here